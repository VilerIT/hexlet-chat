//- Header component.
//-
//- block - optional nav tabs.

mixin header()
  .p-0.radius-md-top-left.bg-white.order-1.order-md-0
    .d-flex.bg-primary.radius-md-top-left.text-white.p-3.align-items-center.justify-content-end
      .d-flex.align-items-center.navbar-brand.mr-auto.p-0
        svg.h-25px.w-25px(fill='currentColor')
          use(xlink:href='images/icons/sprite.svg#logo')
      nav
        ul.nav.nav-tabs.border-0(role='tablist')
          block
